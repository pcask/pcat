<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('partials/_header') -%>

  <body>
    <div class="tm-page-wrap mx-auto">
      <div class="position-relative">
        <!-- Navigation -->
        <%- include('partials/_navigation.ejs') -%>

        <div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
          <div class="text-center">
            <p
              class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white mx-auto"
            >
              Background image can be fixed. Content will simply slide over.
            </p>
          </div>
        </div>

        <!-- Header image -->
        <div id="tm-fixed-header-bg"></div>
      </div>

      <!-- Page content -->
      <div class="container-fluid">
        <div class="mx-auto tm-content-container">
          <main>
            <div class="row mb-5 pb-4">
              <div class="col-12">
                <img
                  src="/uploads/<%= photo.image %>"
                  alt="Image"
                  class="img-fluid tm-catalog-item-img"
                />
              </div>
            </div>
            <div class="row mb-5 pb-5">
              <div class="col-xl-8 col-lg-7">
                <!-- Video description -->
                <div class="tm-video-description-box">
                  <h2 class="mb-5 tm-video-title"><%= photo.title %></h2>
                  <p class="mb-4"><%= photo.description %></p>
                </div>
              </div>
              <div class="col-xl-4 col-lg-5">
                <!-- Share box -->
                <div class="tm-bg-gray tm-share-box">
                  <div class="text-center">
                    <a
                      href="/edit/<%= photo._id %>"
                      class="btn btn-primary mb-4 tm-btn-animate tm-btn-edit tm-icon-edit"
                    >
                      <span>Update Details</span>
                    </a>
                  </div>
                  <div class="text-center">
                    <a
                      onclick="return confirm('Are you sure you really want to delete the image?')"
                      href="/photos/<%= photo._id %>?_method=DELETE"
                      class="btn btn-danger p-0 tm-btn-animate tm-btn-trash tm-icon-trash"
                    >
                      <span>Delete Photo</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </main>

          <!-- Subscribe form and footer links -->
          <%- include('partials/_footer') -%>

          <footer class="row pt-5">
            <div class="col-12">
              <p class="text-right">
                Copyright 2020 The Video Catalog Company - Designed by
                <a href="https://templatemo.com" rel="nofollow" target="_parent"
                  >TemplateMo</a
                >
              </p>
            </div>
          </footer>
        </div>
        <!-- .tm-content-container -->
      </div>
    </div>

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
